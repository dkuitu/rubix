<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.camosun.dvdktn.rubix.MainActivity">

    <Button
        android:id="@+id/buttonLU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:text="LU"
        app:layout_constraintBottom_toTopOf="@+id/buttonLD"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonLD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:text="LD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonTR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="52dp"
        android:text="TR"
        app:layout_constraintBottom_toTopOf="@+id/buttonTL"
        app:layout_constraintEnd_toStartOf="@+id/buttonFR"
        app:layout_constraintStart_toEndOf="@+id/buttonLU" />

    <Button
        android:id="@+id/buttonTL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="52dp"
        android:text="TL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonFL"
        app:layout_constraintStart_toEndOf="@+id/buttonLD" />

    <Button
        android:id="@+id/buttonFR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:text="FR"
        app:layout_constraintBottom_toTopOf="@+id/buttonFL"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonFL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:text="FL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/t1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/t2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/t1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/t3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="140dp"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1" />

    <ImageView
        android:id="@+id/t4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/t3"
        app:layout_constraintTop_toBottomOf="@+id/t2" />

    <ImageView
        android:id="@+id/f1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/green"
        app:layout_constraintStart_toEndOf="@+id/l2"
        app:layout_constraintTop_toBottomOf="@+id/t3" />

    <ImageView
        android:id="@+id/f2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/green"
        app:layout_constraintStart_toEndOf="@+id/f1"
        app:layout_constraintTop_toBottomOf="@+id/t4" />

    <ImageView
        android:id="@+id/f3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/green"
        app:layout_constraintStart_toEndOf="@+id/l4"
        app:layout_constraintTop_toBottomOf="@+id/f1" />

    <ImageView
        android:id="@+id/f4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/green"
        app:layout_constraintStart_toEndOf="@+id/f3"
        app:layout_constraintTop_toBottomOf="@+id/f2" />

    <ImageView
        android:id="@+id/l1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="116dp"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/l2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        android:background="@color/red"
        app:layout_constraintStart_toEndOf="@+id/l1"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/l3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l1" />


    <ImageView
        android:id="@+id/l4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/red"
        app:layout_constraintStart_toEndOf="@+id/l3"
        app:layout_constraintTop_toBottomOf="@+id/l2" />

    <ImageView
        android:id="@+id/r1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        android:background="@color/purple"
        app:layout_constraintStart_toEndOf="@+id/f2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/r2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        android:background="@color/purple"
        app:layout_constraintStart_toEndOf="@+id/r1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/r3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple"
        app:layout_constraintStart_toEndOf="@+id/f4"
        app:layout_constraintTop_toBottomOf="@+id/r1" />

    <ImageView
        android:id="@+id/r4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple"
        app:layout_constraintStart_toEndOf="@+id/r3"
        app:layout_constraintTop_toBottomOf="@+id/r2" />

    <ImageView
        android:id="@+id/b1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="140dp"
        android:background="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f3" />

    <ImageView
        android:id="@+id/b2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/yellow"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintTop_toBottomOf="@+id/f4" />

    <ImageView
        android:id="@+id/b3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="140dp"
        android:background="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <ImageView
        android:id="@+id/b4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/yellow"
        app:layout_constraintStart_toEndOf="@+id/b3"
        app:layout_constraintTop_toBottomOf="@+id/b2" />

    <ImageView
        android:id="@+id/re1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="140dp"
        android:background="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b3" />

    <ImageView
        android:id="@+id/re2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/background_dark"
        app:layout_constraintStart_toEndOf="@+id/re1"
        app:layout_constraintTop_toBottomOf="@+id/b4" />

    <ImageView
        android:id="@+id/re3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/background_dark"
        app:layout_constraintStart_toEndOf="@+id/buttonLU"
        app:layout_constraintTop_toBottomOf="@+id/re1" />

    <ImageView
        android:id="@+id/re4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/background_dark"
        app:layout_constraintStart_toEndOf="@+id/re3"
        app:layout_constraintTop_toBottomOf="@+id/re2" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/scrambleButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/scrambleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Scramble"
        app:layout_constraintBottom_toTopOf="@+id/buttonFR"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>
